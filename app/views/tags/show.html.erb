<% content_for(:page_title, "Tag: #{@tag.name}" + (@pagy.page == 1 ? '' : " - Page #{@pagy.page}")) %>
<h1 class="title">Tag: <%= @tag.name %></h1>
<hr class="is-hidden-touch mt-2 mb-4">
<div class="columns is-1 is-variable is-multiline">
  <% @photos.each do |photo| %>
    <div class="column is-one-quarter">
      <a href="<%= photo_path(photo) %>">
        <img src="<%= photo.image_url(:medium_intelligent).presence || photo.image_url(:medium_square) %>" class="image is-fullwidth" />
        <%= photo.name %>
      </a>
    </div>
  <% end %>
</div>
<hr class="mt-1 mb-4">
<%== pagy_bulma_nav(@pagy) %>
